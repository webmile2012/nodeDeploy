<div class="container mt-5">
  <h1>
      Formulario de Login 
  </h1>
</div>
<div class="container mt-5">
    <form method="post" action="/user/login">
        <div class="mb-3">
            <label for="validationTooltip02" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" value="" name="txtMail" required>
        </div>
        <div class="mb-3">
            <label for="password1" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" value="" name="txtPassword" required>
        </div>
        <div class="mb-3 text-center">
            <button class="btn btn-primary" type="submit">Login</button>
            <button class="btn btn-primary" type="reset">Borrar Datos</button>
        </div>
    </form>
</div>